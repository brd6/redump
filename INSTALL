# Update / Upgrade
sudo apt-get update && sudo apt-get upgrade -y

# Dev Tools
sudo apt-get install build-essential valgrind python-dev git python-pip python-virtualenv python-numpy cmake curl
# Clion / pyCharm / PhpStorm

# Python Tools
pip install --upgrade pip
pip install request scrapy

# https://stackoverflow.com/questions/26053982/error-setup-script-exited-with-error-command-x86-64-linux-gnu-gcc-failed-wit

# Environment
sudo apt-get install terminator zsh emacs vim
curl -L https://github.com/robbyrussell/oh-my-zsh/raw/master/tools/install.sh | sh
chsh -s `which zsh`

# Web Tools
sudo apt-get install apache2 apache2-utils libapache2-mod-php php php-mcrypt php-mysql php-mbstring php-dom

# PHP Composer
# https://getcomposer.org/download/
php -r "copy('https://getcomposer.org/installer', 'composer-setup.php');"
php -r "if (hash_file('SHA384', 'composer-setup.php') === '669656bab3166a7aff8a7506b8cb2d1c292f042046c5a994c43155c0be6190fa0355160742ab2e1c88d40d5be660b410') { echo 'Installer verified'; } else { echo 'Installer corrupt'; unlink('composer-setup.php'); } echo PHP_EOL;"
sudo php composer-setup.php --install-dir=/bin --filename=composer

# Database
sudo apt-get install libsqlite3-dev mysql-server libmysqlclient-dev

sudo mysql_secure_installation


# Navigator 
# https://www.google.fr/chrome/browser/desktop/index.html
sudo apt-get install libappindicator1 libindicator7
wget https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb && sudo dpkg -i google-chrome-stable_current_amd64.deb

# Gnome
sudo apt-get install tasksel && sudo tasksel
